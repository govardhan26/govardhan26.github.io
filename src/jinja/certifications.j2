<!-- certifications.j2 -->
<article class="certifications" data-page="certifications">
  <header>
    <h2 class="h2 article-title">{{ certifications.HEADER.label }}</h2>
  </header>
  <section class="certifications-list">
    <ul class="filter-list">
      <li class="filter-item">
        <button class="active" data-filter-btn>All</button>
      </li>
      {% set categories = certifications.CERTIFICATION | map(attribute='category') | unique | list %}
      {% for category in categories %}
      <li class="filter-item">
        <button data-filter-btn>{{ category }}</button>
      </li>
      {% endfor %}
    </ul>
    <div class="filter-select-box">
      <button class="filter-select" data-select>
        <div class="select-value" data-select-value>Select category</div>
        <div class="select-icon">
          <ion-icon name="chevron-down"></ion-icon>
        </div>
      </button>
      <ul class="select-list">
        <li class="select-item">
          <button data-select-item>All</button>
        </li>
        {% for category in categories %}
        <li class="select-item">
          <button data-select-item>{{ category }}</button>
        </li>
        {% endfor %}
      </ul>
    </div>
    <ul class="certification-list">
      {% for item in certifications.CERTIFICATION %}
      <li class="certification-item active" data-filter-item data-category="{{ item.category | lower }}">
        <a href="{{ item.url }}" target="_blank">
          <figure class="certification-img">
            <div class="certification-item-icon-box">
              <ion-icon name="eye-outline"></ion-icon>
            </div>
            <img src="{{ item.image }}" alt="{{ item.title }}" loading="lazy">
          </figure>
          <h3 class="certification-title">{{ item.title }}</h3>
          <p class="certification-category">{{ item.category }}</p>
        </a>
      </li>
      {% endfor %}
    </ul>
  </section>
</article>
